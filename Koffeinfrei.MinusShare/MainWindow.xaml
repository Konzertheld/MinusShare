<Window x:Class="Koffeinfrei.MinusShare.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:p="clr-namespace:Koffeinfrei.MinusShare.Properties" Title="Min.us Share" Height="294" Width="376" xmlns:my="clr-namespace:System;assembly=mscorlib" xmlns:Properties="clr-namespace:Koffeinfrei.MinusShare.Properties" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStyle="SingleBorderWindow" MinWidth="300">
    <StackPanel Margin="5,5,5,5">

        <TextBox HorizontalAlignment="Stretch" Name="inputTitle" Text="{x:Static p:Resources.InputTitleDefaultText}" GotFocus="inputTitle_GotFocus" LostFocus="inputTitle_LostFocus" Margin="0,0,0,0" />

        <StackPanel HorizontalAlignment="Stretch" Name="stackFiles" Margin="0,5,0,0">
            <TextBlock HorizontalAlignment="Left">Files:</TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,5,0,0">
            <Button Content="Share" HorizontalAlignment="Left" Margin="0,0,0,0" Name="buttonShare" VerticalAlignment="Top" Width="75" Click="buttonShare_Click" />
            <Button Content="Cancel" HorizontalAlignment="Left" Margin="15,0,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" />
        </StackPanel>


        <StackPanel Name="sectionProgress" HorizontalAlignment="Stretch" Margin="0,5,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <Image HorizontalAlignment="Left" Name="imageLoading" Height="48" Width="48" Source="pack://application:,,,/img/loading.png">
                    <Image.RenderTransform>
                        <RotateTransform Angle="0" CenterX="25" CenterY="25" />
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Image.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="imageLoading" Storyboard.TargetProperty="(RenderTransform).(RotateTransform.Angle)" From="0" To="-360" Duration="0:0:0:2" AutoReverse="False" RepeatBehavior="Forever" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>

                <Label Content="" Height="28" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0,0,0" Name="outputStatus" />
            </StackPanel>
        </StackPanel>

        <Grid Name="sectionDone" HorizontalAlignment="Stretch" Margin="0,5,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Content="Share this URL" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Padding="1" />
            <Label Content="Edit at this URL" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Padding="0" />

            <Button Margin="15,0,0,0" Name="buttonShareLink" Cursor="Hand" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="buttonShareLink_Click" Grid.Row="0" Grid.Column="1">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <TextBlock TextDecorations="Underline">
							<ContentPresenter />
                        </TextBlock>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="Black" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Foreground" Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Margin="15,0,0,0" Name="buttonEditLink" Cursor="Hand" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Click="buttonEditLink_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <TextBlock TextDecorations="Underline">
							<ContentPresenter />
                        </TextBlock>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="Black" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Foreground" Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>

    </StackPanel>
</Window>