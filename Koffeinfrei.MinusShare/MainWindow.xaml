<Window x:Class="Koffeinfrei.MinusShare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="294" Width="376">
    <Grid>
        <StackPanel Height="77" HorizontalAlignment="Left" Name="stackFiles" VerticalAlignment="Top" Margin="0,38,0,0" Width="342">
            <TextBlock Margin="6" Padding="3" HorizontalAlignment="Left" FontFamily="Verdana" FontSize="12" FontWeight="Bold">
          Files:
            </TextBlock>
        </StackPanel>
        <Label Content="Share this URL:" Height="28" HorizontalAlignment="Left" Margin="0,204,0,0" VerticalAlignment="Top" />
        <Button Margin="121,204,52,36" Name="buttonShareLink" Cursor="Hand" HorizontalAlignment="Stretch" Click="buttonShareLink_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">
                    <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="Red" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label Content="Edit at this URL:" Height="28" HorizontalAlignment="Left" Margin="0,227,0,0" VerticalAlignment="Top" />
        <Button Margin="121,231,52,9" Name="buttonEditLink" Cursor="Hand" HorizontalAlignment="Stretch" Click="buttonEditLink_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">
                    <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="Red" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="6,12,0,0" Text="Title:" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="51,9,0,0" Name="inputTitle" VerticalAlignment="Top" Width="291" />
        <Button Content="Share" Height="23" HorizontalAlignment="Left" Margin="12,121,0,0" Name="buttonShare" VerticalAlignment="Top" Width="75" Click="buttonShare_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="102,121,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" />
        
        <Canvas Name="spinner" Margin="5,150,245,154"> 
            <Canvas Name="spinningProgress" Margin="0,0,0,0" Height="130" Width="130"  VerticalAlignment="Top" HorizontalAlignment="Left"> 
                <Canvas Name="innerCanvas" Height="110" Width="110"  VerticalAlignment="Center" HorizontalAlignment="Center" Canvas.Left="10" Canvas.Top="10"> 
                    <Ellipse Margin="45,-5,0,0" Name="ellipseLarge" Stroke="Black" Height="20" Width="20" VerticalAlignment="Top" Fill="Black" HorizontalAlignment="Left" /> 
                    <Ellipse Margin="85.3553,14.6447,0,0" Name="ellipse2" Stroke="Black" HorizontalAlignment="Left" Width="10" Height="10" VerticalAlignment="Top" Fill="Black" /> 
                    <Ellipse Margin="100,50,0,0" Name="ellipse3" Stroke="Black" Fill="Black" HorizontalAlignment="Left" Height="10" Width="10" VerticalAlignment="Top" /> 
                    <Ellipse Margin="85.3553,85.3553,0,0" Name="ellipse4" Stroke="Black" HorizontalAlignment="Left" Width="10" Height="10" VerticalAlignment="Top" Fill="Black" /> 
                    <Ellipse Margin="50,100,0,0" Name="ellipse5" Stroke="Black" Fill="Black" HorizontalAlignment="Left" Width="10" Height="10" VerticalAlignment="Top" /> 
                    <Ellipse Margin="14.6447,85.3553,0,0" Name="ellipse6" Stroke="Black" HorizontalAlignment="Left" Width="10" Height="10" VerticalAlignment="Top" Fill="Black" /> 
                    <Ellipse Margin="0,50,0,0" Name="ellipse7" Stroke="Black" HorizontalAlignment="Left" Width="10" Fill="Black" Height="10" VerticalAlignment="Top" /> 
                    <Ellipse Margin="12.1447,12.1447,0,0" Name="ellipseMedium" Width="15" Height="15" Stroke="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="Black" /> 
                </Canvas> 
                <Canvas.RenderTransform> 
                    <RotateTransform x:Name="spin" Angle="0" CenterX="65" CenterY="65"/> 
                </Canvas.RenderTransform> 
                <Canvas.Triggers> 
                    <EventTrigger RoutedEvent="Canvas.Loaded"> 
                        <BeginStoryboard> 
                            <Storyboard> 
                                <DoubleAnimationUsingKeyFrames 
                                Storyboard.TargetName="spinningProgress"  
                                Storyboard.TargetProperty="(Canvas.RenderTransform).(RotateTransform.Angle)" 
                                RepeatBehavior="Forever" Duration="0:0:1"> 
                                    <DiscreteDoubleKeyFrame Value="45" KeyTime="0:0:0.125" /> 
                                    <DiscreteDoubleKeyFrame Value="90" KeyTime="0:0:0.25" /> 
                                    <DiscreteDoubleKeyFrame Value="135" KeyTime="0:0:0.375" /> 
                                    <DiscreteDoubleKeyFrame Value="180" KeyTime="0:0:0.5" /> 
                                    <DiscreteDoubleKeyFrame Value="225" KeyTime="0:0:0.675" /> 
                                    <DiscreteDoubleKeyFrame Value="270" KeyTime="0:0:0.75" /> 
                                    <DiscreteDoubleKeyFrame Value="315" KeyTime="0:0:0.875" /> 
                                </DoubleAnimationUsingKeyFrames> 
                            </Storyboard> 
                        </BeginStoryboard> 
                    </EventTrigger> 
                </Canvas.Triggers> 
            </Canvas> 
            <Canvas.RenderTransform> 
                <ScaleTransform ScaleX="0.3" ScaleY="0.3"/> 
            </Canvas.RenderTransform> 
        </Canvas>
        <Label Content="" Height="28" HorizontalAlignment="Left" Margin="51,158,0,0" Name="outputStatus" VerticalAlignment="Top" Width="291" />
    </Grid>
</Window>
