<Window x:Class="Koffeinfrei.MinusShare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:Koffeinfrei.MinusShare.Properties"
        Title="Min.us Share" Height="294" Width="376" xmlns:my="clr-namespace:System;assembly=mscorlib" xmlns:Properties="clr-namespace:Koffeinfrei.MinusShare.Properties" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStyle="SingleBorderWindow">
    <Grid>
        <StackPanel Height="77" HorizontalAlignment="Left" Name="stackFiles" VerticalAlignment="Top" Margin="12,38,0,0" Width="330">
            <TextBlock Margin="6" Padding="3" HorizontalAlignment="Left" FontFamily="Verdana" FontSize="12" FontWeight="Bold">
          Files:
            </TextBlock>
        </StackPanel>
        <Label Content="Share this URL:" Height="28" HorizontalAlignment="Left" Margin="12,204,0,0" VerticalAlignment="Top" />
        <Button Margin="121,210,12,30" Name="buttonShareLink" Cursor="Hand" HorizontalAlignment="Stretch" Click="buttonShareLink_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">
                    <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="Red" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label Content="Edit at this URL:" Height="28" HorizontalAlignment="Left" Margin="12,227,0,0" VerticalAlignment="Top" />
        <Button Margin="121,233,12,7" Name="buttonEditLink" Cursor="Hand" HorizontalAlignment="Stretch" Click="buttonEditLink_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">
                    <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="Red" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <TextBox Height="23" HorizontalAlignment="Right" Name="inputTitle" VerticalAlignment="Top" Width="330" Text="{x:Static p:Resources.InputTitleDefaultText}" GotFocus="inputTitle_GotFocus" LostFocus="inputTitle_LostFocus" Margin="0,0,12,0" />
        <Button Content="Share" Height="23" HorizontalAlignment="Left" Margin="12,121,0,0" Name="buttonShare" VerticalAlignment="Top" Width="75" Click="buttonShare_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="93,121,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" />

        
        <Label Content="" Height="28" HorizontalAlignment="Left" Margin="69,161,0,0" Name="outputStatus" VerticalAlignment="Top" Width="273" />
        <Image HorizontalAlignment="Left" Margin="13,152,0,0" Name="imageLoading" Height="48" Width="48" VerticalAlignment="Top" Source="pack://application:,,,/img/loading.png" >
            <Image.RenderTransform>
                <RotateTransform Angle="0" CenterX="25" CenterY="25" />
            </Image.RenderTransform>
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="imageLoading" 
                                             Storyboard.TargetProperty="(RenderTransform).(RotateTransform.Angle)"
                                             From="0" To="-360" Duration="0:0:0:2" 
                                             AutoReverse="False" RepeatBehavior="Forever" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
    </Grid>
</Window>
